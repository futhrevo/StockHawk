<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#644b595e"
    android:padding="@dimen/widget_margin"
    android:id="@+id/widget_item_display">


    <TextView
        android:id="@+id/widget_item_symbol"
        style="@style/StockSymbolTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        tools:text="GOOG"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Symbol not added"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:layout_alignParentEnd="true"
        android:layout_margin="3dp">
        <TextView
            android:id="@+id/widget_bid_price"
            style="@style/BidPriceTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1000.00"
            />
        <TextView
            android:id="@+id/widget_change"
            android:background="@drawable/percent_change_pill"
            style="@style/PercentChangeTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="3dp"
            tools:text="100%"
            android:paddingStart="3dp"
            android:textDirection="ltr"/>
    </LinearLayout>
</RelativeLayout>